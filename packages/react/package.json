{
  "name": "@bindit/react",
  "version": "1.0.0",
  "description": "React hooks and components for bindit two-way data binding",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external react,react-dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react,react-dom",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "data-binding",
    "forms",
    "typescript",
    "validation",
    "state-management"
  ],
  "author": "M4T1SS3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/M4T1SS3/bindit.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/M4T1SS3/bindit#readme",
  "bugs": {
    "url": "https://github.com/M4T1SS3/bindit/issues"
  },
  "dependencies": {
    "@bindit/core": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "jsdom": "^26.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.0.1",
    "typescript": "~5.8.3",
    "vitest": "^2.0.0"
  }
}
